{
  "name": "MailEnc",
  "description": "Chrome Extension for Mail Encryption in Gmail using InboxSDK and OpenPGP.js",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://inbox.google.com/*"
      ],
      "js": ["inboxsdk.js","action.js","openpgp.js","encryption.js","chrome-extension-async.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "https://mail.google.com/",
    "https://inbox.google.com/"
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/lock.png",
      "32": "img/lock.png",
      "48": "img/lock.png",
      "128": "img/lock.png"
    }
  },
  "manifest_version": 2
}
